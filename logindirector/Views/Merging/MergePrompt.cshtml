@{
    ViewData["Title"] = "Account Merging";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl page-title page-title--tight">Public Procurement Gateway</h1>
        <p class="govuk-body">If you already have an eSourcing user account you can choose to merge your account without any loss of procurement history.  If you do not have an account a new account will be created for you and linked to your Public Procurement Gateway account.</p>
        <br />
        <form method="POST" action="/"><!-- TODO: Correct route when we've setup the backend route for this -->
            <div class="govuk-form-group">
                <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                        <h2 class="govuk-fieldset__heading">
                            What would you like to do?
                        </h2>
                    </legend>
                    <div class="govuk-radios">
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="account-merge" name="account-decision" type="radio" value="merge">
                            <label class="govuk-label govuk-radios__label" for="account-merge">
                                Merge with existing eSourcing account
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="account-create" name="account-decision" type="radio" value="create">
                            <label class="govuk-label govuk-radios__label" for="account-create">
                                Create a new account to link to your Public Procurement Gateway account
                            </label>
                        </div>
                    </div>
                </fieldset>
            </div>

            <div class="govuk-notification-banner banner-hidden" id="merge-banner" role="region" aria-labelledby="govuk-notification-banner-title">
                <div class="govuk-notification-banner__header">
                    <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
                        Important
                    </h2>
                </div>
                <div class="govuk-notification-banner__content">
                    <p class="govuk-notification-banner__heading">
                        If you do have an existing account your data will not be able to be merged later.
                    </p>
                </div>
            </div>

            <p class="govuk-body"><button class="govuk-button" type="submit">Continue ></button></p>
        </form>
    </div>
</div>