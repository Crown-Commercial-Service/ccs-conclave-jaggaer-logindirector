            <div class="nav-wrapper">
                <span class="logo">
                    <img src="~/Assets/images/CCS_WHITE_SML_AW.png" alt="Crown Commercial Service">
                </span>
            </div>
        </div>
    </header>

    <main id="main-content" role="main" class="govuk-main-wrapper" data-template="">
        <div class="govuk-width-container">
            @RenderBody()
        </div>
    </main>

