@model ErrorViewModel

@{
    ViewData["Title"] = "Wrong Account Merged";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl page-title page-title--tight">Public Procurement Gateway</h1>
        <p class="govuk-body">You have merged the wrong account, or your permissions changed during the merge process.</p>
        <p class="govuk-body">Please contact CCS Support to resolve this.</p>
        <br />
        @if (Model != null && !String.IsNullOrWhiteSpace(Model.DashboardUrl))
        {
            <p class="govuk-body"><a href="@Model.DashboardUrl" class="govuk-button">Go back to your dashboard ></a></p>
        }
    </div>
</div>