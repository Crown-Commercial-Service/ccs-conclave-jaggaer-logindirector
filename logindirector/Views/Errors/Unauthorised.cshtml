@model ErrorViewModel

@{
    ViewData["Title"] = "Access Denied";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl page-title page-title--tight">Public Procurement Gateway</h1>
        @if (Model.Service != null && !String.IsNullOrWhiteSpace(Model.Service.ServiceDisplayName))
        {
            <p class="govuk-body">You do not have the correct permissions to access @Model.Service.ServiceDisplayName at this time.</p>
        }
        <p class="govuk-body">Please try again later.  If the problem persists then please contact CCS Support.</p>
        <br />
        @if (Model != null && !String.IsNullOrWhiteSpace(Model.DashboardUrl))
        {
            <p class="govuk-body"><a href="@Model.DashboardUrl" class="govuk-button">Go back to your dashboard ></a></p>
        }
    </div>
</div>